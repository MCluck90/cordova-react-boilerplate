{
    "name": "com.react.boilerplate",
    "displayName": "React Boilerplate",
    "version": "1.0.0",
    "description": "A simple starter kit which provides React, Webpack, and ESLint support. Designed with Android in mind but should work regardless of the platform.",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "webpack",
        "build:prod": "npm run build -- -p",
        "watch": "npm run build -- --progress --watch",
        "watch:prod": "npm run build:prod -- --progress --watch"
    },
    "author": "Mike Cluck",
    "license": "Apache-2.0",
    "dependencies": {
        "cordova-android": "^6.2.3",
        "cordova-plugin-whitelist": "^1.3.2",
        "jquery": "^3.2.1",
        "react": "^15.6.1",
        "react-dom": "^15.6.1"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "android"
        ]
    },
    "devDependencies": {
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "css-loader": "^0.28.4",
        "eslint": "^4.1.1",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-react": "^7.1.0",
        "file-loader": "^0.11.2",
        "html-webpack-plugin": "^2.29.0",
        "style-loader": "^0.18.2",
        "webpack": "^3.0.0"
    }
}